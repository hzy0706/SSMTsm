    <!--查询所有-->
    <select id="selectAllClasses" resultMap="ClassesMap">
        select
        <include refid="Base_Column_List" />,e1.Emp_Name,e2.Emp_Name hzy,co.Course_Name,
        cs.CourseDetails_Name,co.Classhours,co.Course_Money,e2.Emp_Id cjk
